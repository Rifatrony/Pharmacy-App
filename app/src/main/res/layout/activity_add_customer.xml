<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".AddCustomer">


    <EditText
        android:id="@+id/customerNameId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_background"
        android:hint="Customer Name"
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/customerContactId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_background"
        android:hint="Phone"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/customerAddressId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_background"
        android:hint="Customer Address"
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Save"
        android:backgroundTint="@color/bordercolor"
        android:id="@+id/customerSaveBtnId"
        />

</LinearLayout>